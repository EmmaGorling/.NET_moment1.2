@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Kör JavaScript-koden när sidan är färdigrenderad
            await JS.InvokeVoidAsync("initializeMenu");
        }
    }
}